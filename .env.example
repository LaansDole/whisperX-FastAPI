# Hugging Face Token for model downloads
HF_TOKEN=your_huggingface_token_here

# Default Whisper model (tiny, base, small, medium, large, etc.)
WHISPER_MODEL=small

# Default language for transcription
DEFAULT_LANG=en

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Environment (development, production)
ENVIRONMENT=development

# Filter warnings (true/false)
FILTER_WARNING=true

# Device for inference (cuda, cpu)
DEVICE=cpu

# Compute type (float16, float32, int8)
COMPUTE_TYPE=int8

# [Optional] path to pre-downloaded pyannote/speaker-diarization-3.1 model
DIARIZATION_MODEL_PATH=/path/to/pre/download/pyannote/model

# Basic Temporal Configuration
TEMPORAL_SERVER_URL=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=whisperx-task-queue

# Retry Policy Configuration
TEMPORAL_MAX_ATTEMPTS=3
TEMPORAL_INITIAL_INTERVAL=5
TEMPORAL_BACKOFF_COEFFICIENT=2.0
TEMPORAL_MAX_INTERVAL=300

# Activity Timeout Configuration (in minutes)
TRANSCRIPTION_TIMEOUT=30
ALIGNMENT_TIMEOUT=10
DIARIZATION_TIMEOUT=10
SPEAKER_ASSIGNMENT_TIMEOUT=5

# ========== Medical RAG Configuration ==========

# Enable/disable medical RAG processing
MEDICAL_RAG_ENABLED=true

# LM Studio Configuration
LM_STUDIO_ENABLED=true
LM_STUDIO_BASE_URL=http://localhost:1234/v1
LM_STUDIO_TIMEOUT=120
LM_STUDIO_TEMPERATURE=0.1
LM_STUDIO_MAX_RETRIES=3

# LLM Configuration (for chat completion)
LM_STUDIO_MODEL=
# Max tokens for LLM responses (higher for longer medical transcripts)
LM_STUDIO_MAX_TOKENS=4096

# Embedding Model Configuration (choose one approach)
EMBEDDING_MODEL=
EMBEDDING_DIMENSION=1024  # Adjust based on your embedding model (768 for nomic-embed-text-v1.5, 1024 for BGE models, etc.)

# Medical Processing Features
ENABLE_PHI_DETECTION=true
ENABLE_ENTITY_EXTRACTION=true
ENABLE_SOAP_GENERATION=true
ENABLE_DOCUMENT_STRUCTURING=true
ENABLE_VECTOR_STORAGE=true

# Medical Processing Configuration
MEDICAL_BATCH_SIZE=1
MEDICAL_MAX_RETRIES=2
MEDICAL_TIMEOUT_MINUTES=10

# Vector Database Configuration
VECTOR_DB_PATH=./vector_storage
VECTOR_INDEX_TYPE=IndexFlatL2
VECTOR_SEARCH_LIMIT=10

# HIPAA Compliance Configuration (REQUIRED for production)
HIPAA_ENCRYPTION_KEY=your_base64_encoded_256_bit_key_here
HIPAA_SALT=default_salt_change_in_production
HIPAA_AUDIT_LOG_PATH=./audit_logs
HIPAA_MINIMUM_NECESSARY=true

# Authentication & Authorization
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
ENABLE_AUTHENTICATION=false

# Database Configuration
MEDICAL_DB_PATH=./medical_metadata.db

# Performance Configuration
ENABLE_PARALLEL_MEDICAL_PROCESSING=true
MEDICAL_PROCESSING_WORKERS=2

# Feature Flags for Gradual Rollout
REAL_TIME_ENTITY_EXTRACTION=false
BATCH_ENTITY_EXTRACTION=true
ADVANCED_MEDICAL_REASONING=false

# Temporal Configuration for Medical Workflows
MEDICAL_ACTIVITY_TIMEOUT_MINUTES=15
MEDICAL_WORKFLOW_TIMEOUT_MINUTES=30
