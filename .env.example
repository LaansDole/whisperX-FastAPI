# Hugging Face Token for model downloads
HF_TOKEN=your_huggingface_token_here

# Default Whisper model (tiny, base, small, medium, large, etc.)
WHISPER_MODEL=small

# Default language for transcription
DEFAULT_LANG=en

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Environment (development, production)
ENVIRONMENT=development

# Development mode (true/false)
DEV=true

# Filter warnings (true/false)
FILTER_WARNING=true

# Database URL (SQLite by default)
DB_URL=sqlite:///records.db

# Device for inference (cuda, cpu)
DEVICE=cuda

# Compute type (float16, float32, int8)
COMPUTE_TYPE=float16

# API URL for client usage
API_URL=http://127.0.0.1:8000

# Optional path to pre-downloaded pyannote/speaker-diarization-3.1 model
DIARIZATION_MODEL_PATH=/path/to/pre/download/pyannote/model
